// rnd
const body = document.querySelector('body');
let timeOfDay = getTimeOfDay();//- текущее время суток;
const getRandomNum = () => Math.ceil(Math.random() * 20);
let bgNum = getRandomNum().toString().padStart(2, 0);//- порядковый номер фонового изображения
let randomNum = bgNum;
console.log(`randomNum-1 - ${randomNum}`)

// установка фона
// function setBg() {
//   body.style.backgroundImage = `url('https://raw.githubusercontent.com/rolling-scopes-school/stage1-tasks/assets/images/${timeOfDay}/${randomNum}.jpg')`;
// };
const setBg = () => body.style.backgroundImage = `url('https://raw.githubusercontent.com/rolling-scopes-school/stage1-tasks/assets/images/${timeOfDay}/${randomNum}.jpg')`;

setBg()

function getSlideNext() {
  if (randomNum == 20) { return randomNum = '01'; }
  else if (randomNum < 20) { return randomNum += 1; }
  randomNum = randomNum.toString().padStart(2, 0);
  setBg();
}
getSlideNext()

//console.log()

console.log(`randomNum2 - ${randomNum}`)

